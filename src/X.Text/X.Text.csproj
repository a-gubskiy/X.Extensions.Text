<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>Andrew Gubskiy</Authors>
    <Version>3.0.0</Version>
    <PackageProjectUrl>https://github.com/ernado-x/X.Text</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <Description>Library to simplify common tasks when working with text.</Description>
    <PackageIconUrl>https://ru.gravatar.com/userimage/8071071/f2dc08ee7e4016451f64a7ae9cffd110.png?size=200</PackageIconUrl>
    <RepositoryUrl>https://github.com/ernado-x/X.Text.git</RepositoryUrl>
    <LangVersion>default</LangVersion>
    <Nullable>enable</Nullable>
    <Title>X.Text</Title>
    <PackageLicenseUrl>https://raw.githubusercontent.com/ernado-x/X.Text/master/LICENSE</PackageLicenseUrl>
    <PackageTags>text, string, regex</PackageTags>
    <TargetFrameworks>netstandard1.3;net6.0;net8.0</TargetFrameworks>
    <Copyright>Andrew Gubskiy, 2024</Copyright>
    <AssemblyVersion>3.0.0</AssemblyVersion>
    <FileVersion>3.0.0</FileVersion>
  </PropertyGroup>
  
  <ItemGroup>
    <None Include="icon.png" Pack="True" PackagePath=""/>
  </ItemGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="\"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2023.3.0">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

</Project>